generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String    @unique
  password String
  expenses Expense[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Type {
  INCOME
  EXPENSE
}

enum Method {
  CASH
  CHECK
  CARD
  OTHER
}

model Expense {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  amount   Float
  category String
  date     DateTime
  type     Type
  method   Method

  User   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("expenses")
}
